                                    <Border.Background>
                                        <ImageBrush ImageSource="/Res/btnshoulders.jpg" Stretch="UniformToFill"  />
                                    </Border.Background>
                                </Border>
                                <Border Width="230" Height="230" CornerRadius="20" Cursor="Hand">
                                    <Grid>
                                        <Border 
                                            
