                                                                 HorizontalAlignment="Left" 
                                                                      
                                                                      Margin="0 8 0 0" />
                    <TextBox
        Margin="0 8 0 0" TextWrapping="Wrap"
        HorizontalAlignment="Stretch" FontSize="20" Text="fdss"
        x:Name="tbCreateReviewWorokut" />
                    <StackPanel
        Orientation="Horizontal"
        HorizontalAlignment="Right">
