          IsDefault="True"
          Margin="0 8 8 0" Name="btnDeleteRivewWorkout"
          Content="Удалить" Click="btnDeleteRivewWorkoutInSocial_Click"
          Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
