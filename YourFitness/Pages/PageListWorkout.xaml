                                                                <Border>

                                                                    <Grid>


                                                                        <Grid>
                                                                            <Grid.RowDefinitions>
                                                                                <RowDefinition Height="20*"/>
                                                                                <RowDefinition Height="7*"/>
                                                                            </Grid.RowDefinitions>


                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="80*"/>
