                                                        Name="piWorkoutFavorite" 
                                                          
                                                             Foreground="Black" Width="35" Height="35" Kind="HeartOutline" >


                                                        <hc:FloatingBlock.ContentTemplate>
                                                            <DataTemplate>
                                                                <Path Stretch="Uniform" Data="{StaticResource LoveGeometry}" Fill="{DynamicResource DangerBrush}" Width="16" Height="16"/>
                                                            </DataTemplate>
                                                        </hc:FloatingBlock.ContentTemplate>

                                                    </materialDesign:PackIcon>
                                                </Button>


                                                <materialDesign:RatingBar
                                                                 Grid.Row="1"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"
                                                                 Value="{Binding AvgRating}"
                                                                 IsReadOnly="True" />


                                                <Button
                    Grid.Column="1" Grid.Row="1" Style="{StaticResource MaterialDesignRaisedLightButton}"
                    Width="110" Content="Начать"  Name="btnStartWorkout" Click="btnStartWorkout_Click"
                    materialDesign:ButtonAssist.CornerRadius="15"
                    />






                                            </Grid>


                                        </Border>



                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding  isLikeCurrentUser,  TargetNullValue={x:Null}}" Value="true">
                                                <Setter TargetName="piWorkoutFavorite" Property="materialDesign:PackIcon.Foreground" Value="Red" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding  isLikeCurrentUser,  TargetNullValue={x:Null}}" Value="true">
                                                <Setter TargetName="piWorkoutFavorite" Property="materialDesign:PackIcon.Kind" Value="Heart" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding  isLikeCurrentUser,  TargetNullValue={x:Null}}" Value="false">
                                                <Setter TargetName="piWorkoutFavorite" Property="materialDesign:PackIcon.Foreground" Value="Black" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding  isLikeCurrentUser,  TargetNullValue={x:Null}}" Value="false">
                                                <Setter TargetName="piWorkoutFavorite" Property="materialDesign:PackIcon.Kind" Value="HeartOutLine" />
                                            </DataTrigger>
                                        </DataTemplate.Triggers>

                                    </DataTemplate>
                                </hc:CoverView.ItemHeaderTemplate>

                                <hc:CoverView.ItemTemplate>
