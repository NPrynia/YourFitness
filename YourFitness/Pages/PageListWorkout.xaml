                                                    <ColumnDefinition Width="17*"/>
                                                    <ColumnDefinition Width="10*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Background="#f5f5f5"  Grid.ColumnSpan="2"/>
                                                <Border Background="white" CornerRadius="20"/>


