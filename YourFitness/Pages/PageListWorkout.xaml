                                            <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                                            <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>

                                        </ResourceDictionary.MergedDictionaries>
                                        <SolidColorBrush x:Key="PrimaryHueLightBrush"  Color="#ff844b"/>
                                        <SolidColorBrush x:Key="PrimaryBrush"  Color="#ff844b"/>
                                        <SolidColorBrush x:Key="TitleBrush"  Color="#ff844b"/>
                                    </ResourceDictionary>

                                </hc:CoverView.Resources>


                                <hc:CoverView.ItemHeaderTemplate>
                                    <DataTemplate>
                                        <Border  Background="#f5f5f5" CornerRadius="20">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="41*"/>
                                                    <RowDefinition Height="19*"/>
                                                </Grid.RowDefinitions>


                                                <Border CornerRadius="20"
                                                       Grid.ColumnSpan="2" >
                                                    <Border.Background>
                                                        <ImageBrush   Stretch="Fill"  >
                                                            <ImageBrush.ImageSource>
                                                                <Binding Path="WorkoutImage">
                                                                    <Binding.TargetNullValue>
                                                                        <ImageSource>/Res/tempWorkout.jpg</ImageSource>
                                                                    </Binding.TargetNullValue>
                                                                </Binding>
                                                            </ImageBrush.ImageSource>


                                                        </ImageBrush>
                                                    </Border.Background>
                                                </Border>

                                                <Border Height="50" Grid.ColumnSpan="2"  
                                                            VerticalAlignment="Bottom">
                                                    <Border.Background>
                                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                            <GradientStop Color="Transparent"/>
                                                            <GradientStop Color="#f5f5f5" Offset="0.6"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" Margin="10 0 0 0" TextWrapping="Wrap"
                                                               Grid.ColumnSpan="2" FontSize="18"  VerticalAlignment="Bottom" 
                                                               FontFamily="Cascadia Code SemiBold"
                                                               />



                                                <Button Height="40" BorderThickness="0" Margin="10" Name="btnFavoriteWorkout" Click="btnFavoriteWorkout_Click"  Background="Transparent"  Width="40"  HorizontalAlignment="right" Grid.Column="1" VerticalAlignment="Top" >
